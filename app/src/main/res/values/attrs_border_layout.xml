<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="bl_position">
        <flag name="NORTH" value="0x20"/>
        <flag name="SOUTH" value="0x21"/>
        <flag name="EAST" value="0x10"/>
        <flag name="WEST" value="0x11"/>
        <flag name="CENTER" value="0x00"/>

    </attr>

    <attr name="bl_mode">
        <flag name="LEFT_RIGHT_COVER" value="0x01"/>
        <flag name="TOP_BOTTOM_COVER" value="0x20"/>
    </attr>

    <declare-styleable name="BorderLayout">

        <attr name="bl_mode"/>

    </declare-styleable>
    <declare-styleable name="BorderLayout_layout">
        <attr name="bl_position" />
    </declare-styleable>

</resources>