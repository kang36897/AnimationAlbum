<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="customizeButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Press Me !</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">#FEFEFE</item>
        <item name="android:layout_margin">5dip</item>
    </style>

    <style name="listItem">
        <item name="android:text">Press Me !</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="composeItemWrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:paddingLeft">6dip</item>
        <item name="android:paddingRight">6dip</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="composeItemTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="listItemTextStyle">
        <item name="android:paddingBottom">4dip</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingTop">4dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:textColor">#000</item>
    </style>

        <style name="MyDialogTheme" parent = "@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowBackground">@drawable/dark_border_rounded_rectangle_bg_white</item>
    </style>

    <style name="whiteTextDarkShadow">
        <item name="android:textColor">#fff</item>
        <item name="android:shadowRadius">1.2</item>
        <item name="android:shadowColor">#515151</item>
        <item name="android:shadowDx">1.2</item>
        <item name="android:shadowDy">1.2</item>
    </style>
    <style name="whiteTextDarkShadowBlod" parent="@style/whiteTextDarkShadow">
        <item name="android:textStyle">bold</item>
    </style>

</resources>