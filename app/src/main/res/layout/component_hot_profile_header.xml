<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/latest_photo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/center_boobs_girl"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:paddingTop="16dp">
    <TextView android:id="@+id/latest_photo_description"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:text="Victoria's Secret"
        android:layout_alignParentTop="true"
        style="@style/whiteTextDarkShadow"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/taken_stamp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="3d"
        android:textColor="#fff"
        android:layout_marginBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


     <LinearLayout
         android:layout_width="60dp"
         android:layout_height="60dp"
         android:id="@+id/follower_count_container"
         android:layout_alignParentBottom="true"
         android:layout_alignParentLeft="true"


         android:background="@drawable/white_circle_transparent_bg"
         android:orientation="vertical">
         <TextView android:id="@+id/follower_count"
             android:layout_width="wrap_content"
             android:layout_gravity="center_horizontal"
             android:layout_marginTop="12dp"
             style="@style/whiteTextDarkShadow"
             android:textStyle="bold"

             android:textSize="18sp"
             android:layout_height="wrap_content"
             android:text="6"/>
         <TextView android:text="Followers" android:layout_width="wrap_content"
             android:layout_gravity="center_horizontal"
             android:textSize="10sp"
             style="@style/whiteTextDarkShadow"
             android:layout_height="wrap_content"/>
     </LinearLayout>

        
     <Button
         android:id="@+id/following_btn"
         style="@style/whiteTextDarkShadow"
         android:layout_alignParentBottom="true"
         android:background="@drawable/white_border_rounded_rectangle_bg_transparent"
         android:layout_marginLeft="16dp"
         android:layout_toRightOf="@id/follower_count_container"
         android:layout_width="120dp"
         android:gravity="center"
         android:textSize="16sp"

         android:text="Follow"
         android:layout_height="32dp" />



    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.google.android.gms.maps.MapView
            android:id="@+id/map_view"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="bottom"
            android:background="#1c9dd6"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/moments_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:text="7 moments"
                android:textColor="#fff"
                android:textSize="16sp" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>